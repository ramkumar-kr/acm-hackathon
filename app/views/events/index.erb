<div class="grid">
    <div class="title center">
        <h1 class="h1 font-weight-normal">Events</h1>
    </div>

    <div class="item list-group">
        <% for e in @events do %>
            <a href=<%= "/events/#{e.id}" %> class="list-group-item list-group-item-action">
                <%= e.name %>
            </a>
        <% end %>
    </div>
</div>